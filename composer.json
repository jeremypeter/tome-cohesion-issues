{
    "name": "drupal-tome/tome-project",
    "description": "A starter project for Tome.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Mortenson",
            "email": "samuel@mortenson.coffee"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "drupal/core-composer-scaffold": "^9.1",
        "cweagans/composer-patches": "^1.7",
        "drupal/core": "^9",
        "drush/drush": "^10.3",
        "drupal/tome": "^1.0",
        "drupal-tome/tome_drush": "dev-master",
        "webflo/drupal-finder": "^1.2",
        "acquia/cohesion": "6.6.0",
        "acquia/cohesion-theme": "6.6.0"
    },
    "scripts": {
        "symlink": "./scripts/symlink.sh",
        "post-install-cmd": [
            "@symlink"
        ],
        "post-update-cmd": [
            "@symlink"
        ],
        "clean": "rm -rf drush vendor web"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
          "locations": {
              "web-root": "web/"
          }
        },
        "patches": {
            "drupal/core": {
                "Update SQLite's transaction support": "https://www.drupal.org/files/issues/1120020-59.patch"
              },
            "acquia/cohesion": {
                "Menu template issue fix": "./patches/aco-1183-v2.patch"
            }
        }
    }
}
